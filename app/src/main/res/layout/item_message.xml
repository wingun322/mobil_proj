<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <!-- 상대방 메시지 -->
    <LinearLayout
        android:id="@+id/otherMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/otherUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/otherMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_other_message"
            android:padding="12dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/otherTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- 내 메시지 -->
    <LinearLayout
        android:id="@+id/myMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/myMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_my_message"
            android:padding="12dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/myTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

</RelativeLayout> 